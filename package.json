{
  "name": "auth-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "next lint",
    "build": "next build",
    "start": "next start",
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "migration:create": "node-pg-migrate -m src/infra/migrations create",
    "migration:up": "node-pg-migrate -m src/infra/migrations --envPath .env up",
    "migration:down": "node-pg-migrate -m src/infra/migrations --envPath .env down"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "next": "14.2.3",
    "pg": "^8.11.5",
    "react": "^18",
    "react-dom": "^18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.11.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "node-pg-migrate": "^7.3.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}
